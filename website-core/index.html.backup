    <style>
        :root {
            --bg: linear-gradient(to bottom, #0f0c29, #302b63, #24243e);
            --text: #ffffff;
            --accent: #00ffee;
            --panel-bg: rgba(0, 0, 0, 0.8);
            --profile-img-pos-x: 50%;
            --profile-img-pos-y: 50%;
        }
        body.light {
            --bg: #f4f4f4;
            --text: #111;
            --accent: #0066ff;
            --panel-bg: rgba(255, 255, 255, 0.9);
        }
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            color: var(--text, #fff);
            background: radial-gradient(ellipse at center, #000 0%, #0f2027 70%, #203a43 100%);
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-position: center;
            transition: background 0.5s ease;
            height: auto;
            overflow-x: hidden;
            overflow-y: auto;
        }
        .hero-section {
            width: 100vw;
            max-width: 100%;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            background: transparent;
        }
        .hero-section img {
            width: 100%;
            height: auto;
            max-height: 400px;
            object-fit: cover;
            display: block;
            background: #222;
        }
        .hero-text {
            width: 100%;
            text-align: center;
            z-index: 3;
            color: #fff;
            text-shadow: 2px 2px 8px #000;
            margin-bottom: 32px;
        }
        .hero-text h1 {
            font-size: 2.8rem;
            font-family: 'Orbitron', sans-serif;
            letter-spacing: 2px;
        }
        .hero-text p {
            font-size: 1.3rem;
        }
        .main-content {
            position: relative;
            z-index: 1;
            margin-top: 40px;
        }
        .content-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(3, auto);
            gap: 32px;
            padding: 40px 10px 60px 10px;
            max-width: 900px;
            margin: 0 auto;
        }
        .box {
            background: #23283a;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15);
            padding: 2em;
            position: relative;
            transition: transform 0.2s;
            color: #fff;
            text-decoration: none;
            min-height: 180px;
        }
        .box:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 8px 32px rgba(0,0,0,0.25);
        }
        .box img {
            width: 100%;
            max-width: 200px;
            border-radius: 8px;
            margin-top: 10px;
        }
        .box h2 {
            font-family: 'Orbitron', sans-serif;
            color: var(--accent);
            font-size: 1.2rem;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .box h2::after {
            content: '→';
            font-size: 1.2rem;
            opacity: 0;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }
        .box:hover h2::after {
            opacity: 1;
            transform: translateX(5px);
        }
        .box p, .box ul {
            font-size: 0.85rem;
            line-height: 1.3;
            margin: 0;
        }
        .box ul {
            list-style: none;
            padding: 0;
        }
        .box li {
            margin: 3px 0;
            padding: 6px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 6px;
            transition: transform 0.3s ease;
        }
        .box li:hover {
            transform: translateX(5px);
            background: rgba(255, 255, 255, 0.1);
        }
        .gallery-img, iframe, .news-car {
            width: 100%;
            max-height: 200px;
            border-radius: 10px;
            box-shadow: 0 0 10px var(--accent);
            object-fit: cover;
        }
        .news-car {
            animation: drive 5s ease-in-out infinite alternate;
        }
        @keyframes drive {
            0% { transform: translateX(-10%); }
            100% { transform: translateX(10%); }
        }
        .theme-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            background: var(--accent);
            color: #000;
            border: none;
            padding: 10px 15px;
            border-radius: 30px;
            cursor: pointer;
            z-index: 999;
        }

        /* Live Feed Styles */
        #live-feed {
            height: 150px;
            overflow-y: auto;
            padding: 8px;
        }
        
        #live-feed p {
            margin: 3px 0;
            padding: 6px;
            font-size: 0.8rem;
        }

        /* Chatbot Styles */
        .chatbot-widget {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 300px;
            border-radius: 15px;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(8px);
            font-family: 'Poppins', sans-serif;
            overflow: hidden;
            z-index: 1000;
            transition: transform 0.3s ease, opacity 0.3s ease;
            transform-origin: bottom right;
        }
        .chatbot-widget.closed {
            transform: translateY(calc(100% - 60px));
        }
        .chatbot-header {
            background: var(--accent);
            color: var(--panel-bg);
            padding: 15px;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .chatbot-header:hover {
            opacity: 0.9;
        }
        .chatbot-toggle {
            transform: rotate(0deg);
            transition: transform 0.3s ease;
        }
        .closed .chatbot-toggle {
            transform: rotate(180deg);
        }
        .chatbot-window {
            display: flex;
            flex-direction: column;
        }
        .chatbot-messages {
            height: 150px;
            overflow-y: auto;
            padding: 10px;
            font-size: 0.85rem;
        }
        #chat-input {
            border: none;
            border-top: 1px solid var(--accent);
            padding: 10px;
            font-size: 0.85rem;
            outline: none;
            background: transparent;
            color: var(--text);
        }
        .chatbot-avatar {
            position: absolute;
            top: -40px;
            right: 10px;
            width: 48px;
            height: 48px;
            z-index: 10;
            border-radius: 50%;
            overflow: hidden;
