    class AlienCharacter {
      constructor() {
        this.characterDiv = document.querySelector('.alien-character');
        this.chatBubble = this.characterDiv.querySelector('.chat-bubble');
        this.messageText = this.chatBubble.querySelector('.message-text');
        this.isAnimating = false;
        
        // Make alien clickable for interaction
        this.characterDiv.addEventListener('click', () => this.triggerRandomReaction());
        
        // Start in rest state (static, mouth closed)
        this.characterDiv.classList.add('rest');
        
        // Initial greeting
        setTimeout(() => {
          this.showMessage("Hello! I'm your AI assistant. Click me or send a message! 👽✨");
        }, 1000);
      }
      
      setState(state) {
        if (this.isAnimating) return; // Prevent overlapping animations
        
        // Remove all state classes
        this.characterDiv.classList.remove('rest', 'speaking', 'walking', 'thinking', 'excited', 'responding');
        
        // Add current state class
        this.characterDiv.classList.add(state);
        this.isAnimating = true;
        
        // Update chat bubble message based on state
        const stateMessages = {
          'thinking': "Let me think about that... 🤔",
          'excited': "That's fascinating! 🌟",
          'responding': "Here's what I found! 📡",
          'walking': "Exploring the digital realm... 🚶‍♂️",
          'speaking': "I'm speaking now! 👽💬"
        };
        
        if (stateMessages[state]) {
          this.showMessage(stateMessages[state]);
        }
        
        // Remove animation class after animation completes and return to rest
        const animationDuration = {
          'walking': 3000,
          'thinking': 2000,
          'excited': 2000,
          'responding': 3000,
          'speaking': 4000
        };
        
        setTimeout(() => {
          this.characterDiv.classList.remove(state);
          this.characterDiv.classList.add('rest'); // Return to rest state (static, mouth closed)
          this.isAnimating = false;
        }, animationDuration[state] || 2000);
      }
      
      showMessage(text) {
        this.messageText.textContent = text;
        this.chatBubble.classList.add('show');
        
        // Switch to speaking state when showing message
        this.characterDiv.classList.remove('rest');
        this.characterDiv.classList.add('speaking');
        
        // Hide after 4 seconds and return to rest
        setTimeout(() => {
          this.chatBubble.classList.remove('show');
          this.characterDiv.classList.remove('speaking');
          this.characterDiv.classList.add('rest');
        }, 4000);
      }
      
      triggerRandomReaction() {
        if (this.isAnimating) return;
        
        const reactions = ['thinking', 'excited', 'walking', 'responding'];
        const randomReaction = reactions[Math.floor(Math.random() * reactions.length)];
        
        this.setState(randomReaction);
      }
      
      // Method to be called from chatbot
      respondToMessage(userMessage) {
        if (this.isAnimating) return;
        
        this.setState('thinking');
        
        setTimeout(() => {
          this.setState('responding');
          
          setTimeout(() => {
            const responses = [
              "That's a great question! Let me help you with that. 👽✨",
              "I've analyzed your request and here's what I found! 📡",
              "Interesting! Here's what I think about that... 🧠",
              "Let me search my knowledge base for you! 🔍",
              "I'm excited to help you with this! 🌟"
            ];
            
            const randomResponse = responses[Math.floor(Math.random() * responses.length)];
            this.showMessage(randomResponse);
            
            setTimeout(() => {
              this.setState('excited');
            }, 1000);
          }, 1500);
        }, 2000);
      }
    }
    
